<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <!--<variable-->
            <!--name=""-->
            <!--type=""/>-->


    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.dindong.dingdong.presentation.main.ShopInfoActivity">

        <com.dindong.dingdong.widget.NavigationTopBar
            android:id="@+id/shop_info_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navigation_top_bar_height"></com.dindong.dingdong.widget.NavigationTopBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/shop_info_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:padding="5dp" />

            <TextView
                android:id="@+id/shop_info_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_info_photo"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="海豚教育（迈皋桥店）"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shop_info_school_name"
                android:layout_toRightOf="@+id/shop_info_photo"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已认证教学场地与工商登记" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</layout>

