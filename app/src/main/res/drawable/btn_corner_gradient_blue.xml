<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:centerX="0.5" android:centerY="0.5" android:endColor="#4184EC" android:startColor="#0ACFFE" android:type="linear" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/gray" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:centerX="0.5" android:centerY="0.5" android:endColor="#7D4184EC" android:startColor="#7D0ACFFE" android:type="linear" />

            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>