<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:centerX="0.5" android:centerY="0.5" android:endColor="#4184EC" android:startColor="#0ACFFE" android:type="linear" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="8dp" android:topLeftRadius="8dp" />
            <stroke android:width="1dp" android:color="#468DE6" />
        </shape>
    </item>
</selector>